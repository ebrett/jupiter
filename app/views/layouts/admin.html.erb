<!DOCTYPE html>
<html>
  <head>
    <title>Jupiter Admin - Reimbursement Management</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50">
    <!-- Navigation Header -->
    <nav class="bg-gray-800 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <div class="flex items-center">
            <div class="flex-shrink-0 text-xl font-bold">
              Jupiter Admin
            </div>
          </div>

          <!-- Navigation Links -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <%= link_to "Dashboard", admin_path, class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-900 text-white' if current_page?(admin_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_path)}" %>
              <%= link_to "Users", admin_users_path, class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-900 text-white' if current_page?(admin_users_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_users_path)}" %>
              <%= link_to "Roles", admin_roles_path, class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-900 text-white' if current_page?(admin_roles_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_roles_path)}" %>
              <%= link_to "OAuth Status", admin_oauth_status_path, class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-900 text-white' if current_page?(admin_oauth_status_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_oauth_status_path)}" %>
              <%= link_to "System Health", admin_system_health_path, class: "px-3 py-2 rounded-md text-sm font-medium #{'bg-gray-900 text-white' if current_page?(admin_system_health_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_system_health_path)}" %>
            </div>
          </div>

          <!-- User Menu -->
          <div class="flex items-center space-x-4">
            <span class="text-gray-300 text-sm">
              <%= Current.user&.email_address %>
            </span>
            <%= link_to root_path, class: "text-gray-300 hover:text-white", title: "Go to main site" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
            <% end %>
            <%= button_to "Log out", session_path, method: :delete, 
                data: { confirm: "Are you sure you want to log out?" },
                class: "text-gray-300 hover:text-white text-sm bg-transparent border border-gray-600 hover:border-gray-400 px-3 py-1 rounded" %>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button id="mobile-menu-button" class="text-gray-300 hover:text-white">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile menu -->
      <div id="mobile-menu" class="md:hidden hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
          <%= link_to "Dashboard", admin_path, class: "block px-3 py-2 rounded-md text-base font-medium #{'bg-gray-900 text-white' if current_page?(admin_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_path)}" %>
          <%= link_to "Users", admin_users_path, class: "block px-3 py-2 rounded-md text-base font-medium #{'bg-gray-900 text-white' if current_page?(admin_users_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_users_path)}" %>
          <%= link_to "Roles", admin_roles_path, class: "block px-3 py-2 rounded-md text-base font-medium #{'bg-gray-900 text-white' if current_page?(admin_roles_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_roles_path)}" %>
          <%= link_to "OAuth Status", admin_oauth_status_path, class: "block px-3 py-2 rounded-md text-base font-medium #{'bg-gray-900 text-white' if current_page?(admin_oauth_status_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_oauth_status_path)}" %>
          <%= link_to "System Health", admin_system_health_path, class: "block px-3 py-2 rounded-md text-base font-medium #{'bg-gray-900 text-white' if current_page?(admin_system_health_path)} #{'text-gray-300 hover:bg-gray-700 hover:text-white' unless current_page?(admin_system_health_path)}" %>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">
          <%= content_for?(:page_title) ? yield(:page_title) : "Admin Dashboard" %>
        </h1>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <!-- Flash Messages -->
      <% if notice %>
        <div class="rounded-md bg-green-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800"><%= notice %></p>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="rounded-md bg-red-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800"><%= alert %></p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Content -->
      <div class="px-4 py-6 sm:px-0">
        <%= yield %>
      </div>
    </main>

    <!-- Mobile menu JavaScript -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>
  </body>
</html>