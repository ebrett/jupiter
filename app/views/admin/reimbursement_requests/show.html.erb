<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <%= link_to "← Back to Requests", admin_reimbursement_requests_path, 
                class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">
        Reimbursement Request #<%= @reimbursement_request.request_number %>
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        <%= @reimbursement_request.title %>
      </p>
    </div>
    
    <div class="border-t border-gray-200">
      <dl>
        <!-- Status -->
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5
              <%= case @reimbursement_request.status
                  when 'draft' then 'bg-gray-100 text-gray-800'
                  when 'submitted' then 'bg-yellow-100 text-yellow-800'
                  when 'under_review' then 'bg-blue-100 text-blue-800'
                  when 'approved' then 'bg-green-100 text-green-800'
                  when 'rejected' then 'bg-red-100 text-red-800'
                  when 'paid' then 'bg-purple-100 text-purple-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
              <%= @reimbursement_request.status.humanize %>
            </span>
          </dd>
        </div>

        <!-- Submitter -->
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Submitter</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @reimbursement_request.user.first_name %> <%= @reimbursement_request.user.last_name %>
            <div class="text-xs text-gray-500"><%= @reimbursement_request.user.email_address %></div>
          </dd>
        </div>

        <!-- Description -->
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= simple_format(@reimbursement_request.description) %>
          </dd>
        </div>

        <!-- Amount -->
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Amount Requested</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            $<%= number_with_precision(@reimbursement_request.amount_in_dollars, precision: 2) %> <%= @reimbursement_request.currency %>
          </dd>
        </div>

        <% if @reimbursement_request.approved? && @reimbursement_request.approved_amount_cents %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Amount Approved</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              $<%= number_with_precision(@reimbursement_request.approved_amount, precision: 2) %> <%= @reimbursement_request.currency %>
              <% if @reimbursement_request.approval_notes.present? %>
                <div class="text-xs text-gray-500 mt-1">
                  Notes: <%= @reimbursement_request.approval_notes %>
                </div>
              <% end %>
            </dd>
          </div>
        <% end %>

        <!-- Category & Priority -->
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Category</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @reimbursement_request.category.humanize %>
          </dd>
        </div>

        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Priority</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @reimbursement_request.priority.humanize %>
          </dd>
        </div>

        <!-- Dates -->
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Expense Date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @reimbursement_request.expense_date&.strftime('%B %d, %Y') %>
          </dd>
        </div>

        <% if @reimbursement_request.submitted_at %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Submitted At</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @reimbursement_request.submitted_at.strftime('%B %d, %Y at %I:%M %p') %>
            </dd>
          </div>
        <% end %>

        <% if @reimbursement_request.approved_by %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Approved By</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @reimbursement_request.approved_by.first_name %> <%= @reimbursement_request.approved_by.last_name %>
              <div class="text-xs text-gray-500">
                <%= @reimbursement_request.approved_at&.strftime('%B %d, %Y at %I:%M %p') %>
              </div>
            </dd>
          </div>
        <% end %>

        <% if @reimbursement_request.rejected? && @reimbursement_request.rejection_reason.present? %>
          <div class="bg-red-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Rejection Reason</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @reimbursement_request.rejection_reason %>
              <div class="text-xs text-gray-500">
                <%= @reimbursement_request.rejected_at&.strftime('%B %d, %Y at %I:%M %p') %>
              </div>
            </dd>
          </div>
        <% end %>

        <!-- Receipts -->
        <% if @reimbursement_request.receipts.attached? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Receipts</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <ul class="border border-gray-200 rounded-md divide-y divide-gray-200">
                <% @reimbursement_request.receipts.each do |receipt| %>
                  <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm">
                    <div class="w-0 flex-1 flex items-center">
                      <span class="ml-2 flex-1 w-0 truncate">
                        <%= receipt.filename %>
                      </span>
                    </div>
                    <div class="ml-4 flex-shrink-0">
                      <%= link_to "Download", rails_blob_path(receipt, disposition: "attachment"), 
                                  class: "font-medium text-indigo-600 hover:text-indigo-500" %>
                    </div>
                  </li>
                <% end %>
              </ul>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Audit Trail -->
  <% if @reimbursement_request.events.any? %>
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Audit Trail
        </h3>
      </div>
      <div class="border-t border-gray-200">
        <ul role="list" class="divide-y divide-gray-200">
          <% @reimbursement_request.events.recent.each do |event| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <span class="inline-flex items-center justify-center h-8 w-8 rounded-full 
                      <%= case event.event_type
                          when 'submitted' then 'bg-yellow-100'
                          when 'approved' then 'bg-green-100'
                          when 'rejected' then 'bg-red-100'
                          when 'paid' then 'bg-purple-100'
                          when 'info_requested' then 'bg-blue-100'
                          else 'bg-gray-100'
                          end %>">
                      <%= event.event_type[0].upcase %>
                    </span>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">
                      <%= event.formatted_event_type %>
                      <% if event.from_status && event.to_status %>
                        <span class="text-gray-500">
                          (<%= event.from_status %> → <%= event.to_status %>)
                        </span>
                      <% end %>
                    </p>
                    <p class="text-sm text-gray-500">
                      by <%= event.user.first_name %> <%= event.user.last_name %>
                      <% if event.event_data.present? && (event.event_data['notes'] || event.event_data['reason']) %>
                        - <%= event.event_data['notes'] || event.event_data['reason'] %>
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="text-sm text-gray-500">
                  <%= event.created_at.strftime('%b %d, %I:%M %p') %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- Action Buttons -->
  <div class="mt-8 flex flex-wrap gap-4">
    <% if policy(@reimbursement_request).approve? && @reimbursement_request.can_approve? %>
      <%= form_with url: approve_admin_reimbursement_request_path(@reimbursement_request), 
                    method: :patch, 
                    class: "inline-block",
                    data: { turbo_confirm: "Are you sure you want to approve this request?" } do |f| %>
        <%= f.submit "Approve Request", 
                     class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      <% end %>
    <% end %>

    <% if policy(@reimbursement_request).reject? && @reimbursement_request.can_reject? %>
      <button type="button" 
              onclick="document.getElementById('reject-modal').classList.remove('hidden')"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
        Reject Request
      </button>
    <% end %>

    <% if policy(@reimbursement_request).request_info? && @reimbursement_request.can_request_info? %>
      <button type="button"
              onclick="document.getElementById('info-modal').classList.remove('hidden')"
              class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Request More Info
      </button>
    <% end %>

    <% if policy(@reimbursement_request).mark_paid? && @reimbursement_request.can_mark_paid? %>
      <%= form_with url: mark_paid_admin_reimbursement_request_path(@reimbursement_request), 
                    method: :patch, 
                    class: "inline-block",
                    data: { turbo_confirm: "Are you sure you want to mark this request as paid?" } do |f| %>
        <%= f.submit "Mark as Paid", 
                     class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" %>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Reject Modal -->
<div id="reject-modal" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <%= form_with url: reject_admin_reimbursement_request_path(@reimbursement_request), 
                    method: :patch,
                    class: "bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |f| %>
        <div>
          <div class="mt-3 text-center sm:mt-0 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              Reject Reimbursement Request
            </h3>
            <div class="mt-4">
              <%= f.label :rejection_reason, "Rejection Reason", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :rejection_reason, 
                              rows: 4,
                              required: true,
                              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                              placeholder: "Please provide a reason for rejection..." %>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <%= f.submit "Reject Request", 
                       class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm" %>
          <button type="button" 
                  onclick="document.getElementById('reject-modal').classList.add('hidden')"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Request Info Modal -->
<div id="info-modal" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <%= form_with url: request_info_admin_reimbursement_request_path(@reimbursement_request), 
                    method: :patch,
                    class: "bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |f| %>
        <div>
          <div class="mt-3 text-center sm:mt-0 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              Request Additional Information
            </h3>
            <div class="mt-4">
              <%= f.label :info_request, "Information Needed", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :info_request, 
                              rows: 4,
                              required: true,
                              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                              placeholder: "Please describe what additional information is needed..." %>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <%= f.submit "Send Request", 
                       class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:ml-3 sm:w-auto sm:text-sm" %>
          <button type="button" 
                  onclick="document.getElementById('info-modal').classList.add('hidden')"
                  class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>