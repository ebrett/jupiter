<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "← Back to Components", "/component_examples", class: "text-sm text-gray-500 hover:text-gray-700 mb-4 inline-block" %>
    <h1 class="text-3xl font-bold text-gray-900">Form Components</h1>
    <p class="mt-2 text-lg text-gray-600">Input fields, selects, and form layouts</p>
  </div>

  <div class="space-y-12">
    <!-- Text Inputs -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Text Inputs</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="space-y-4 max-w-md">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" name="email" id="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="you@example.com">
          </div>
          
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input type="password" name="password" id="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          
          <div>
            <label for="disabled" class="block text-sm font-medium text-gray-400">Disabled Input</label>
            <input type="text" name="disabled" id="disabled" disabled class="mt-1 block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm sm:text-sm cursor-not-allowed" value="Cannot edit this">
          </div>
          
          <div>
            <label for="error" class="block text-sm font-medium text-gray-700">Input with Error</label>
            <input type="text" name="error" id="error" class="mt-1 block w-full rounded-md border-red-300 text-red-900 placeholder-red-300 focus:border-red-500 focus:ring-red-500 sm:text-sm" value="Invalid input">
            <p class="mt-2 text-sm text-red-600">Please enter a valid value</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Textarea -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Textarea</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="max-w-md">
          <label for="comment" class="block text-sm font-medium text-gray-700">Add your comment</label>
          <textarea rows="4" name="comment" id="comment" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" placeholder="Write your thoughts here..."></textarea>
        </div>
      </div>
    </section>

    <!-- Select -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Select Dropdown</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="max-w-md">
          <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
          <select id="country" name="country" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            <option>United States</option>
            <option>Canada</option>
            <option>Mexico</option>
            <option>United Kingdom</option>
          </select>
        </div>
      </div>
    </section>

    <!-- Checkboxes and Radio Buttons -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Checkboxes and Radio Buttons</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="space-y-6">
          <!-- Checkboxes -->
          <div>
            <p class="text-sm font-medium text-gray-700 mb-3">Notifications</p>
            <div class="space-y-2">
              <div class="flex items-center">
                <input id="comments" name="comments" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                <label for="comments" class="ml-2 text-sm text-gray-700">Comments</label>
              </div>
              <div class="flex items-center">
                <input id="candidates" name="candidates" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                <label for="candidates" class="ml-2 text-sm text-gray-700">Candidates</label>
              </div>
              <div class="flex items-center">
                <input id="offers" name="offers" type="checkbox" checked class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                <label for="offers" class="ml-2 text-sm text-gray-700">Offers</label>
              </div>
            </div>
          </div>
          
          <!-- Radio Buttons -->
          <div>
            <p class="text-sm font-medium text-gray-700 mb-3">Privacy Setting</p>
            <div class="space-y-2">
              <div class="flex items-center">
                <input id="public" name="privacy" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500">
                <label for="public" class="ml-2 text-sm text-gray-700">Public access</label>
              </div>
              <div class="flex items-center">
                <input id="private" name="privacy" type="radio" checked class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500">
                <label for="private" class="ml-2 text-sm text-gray-700">Private to project members</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Complete Form Example -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Complete Form Example</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <form class="space-y-6 max-w-lg">
          <div>
            <label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
            <input type="text" name="first-name" id="first-name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          
          <div>
            <label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
            <input type="text" name="last-name" id="last-name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700">Company</label>
            <input type="text" name="company" id="company" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
          </div>
          
          <div class="flex items-center">
            <input id="terms" name="terms" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            <label for="terms" class="ml-2 text-sm text-gray-700">I agree to the terms and conditions</label>
          </div>
          
          <div class="flex gap-3">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Submit
            </button>
            <button type="button" class="bg-white text-gray-700 px-4 py-2 rounded-md text-sm font-medium border border-gray-300 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </section>
  </div>
</div>
