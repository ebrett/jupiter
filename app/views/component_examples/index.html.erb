<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Component Examples</h1>
    <p class="mt-2 text-lg text-gray-600">Browse and explore UI components from the Catalyst UI Kit</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= link_to "/component_examples/buttons", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Buttons</h2>
      <p class="text-gray-600">Primary, secondary, and various button states</p>
    <% end %>

    <%= link_to "/component_examples/forms", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Forms</h2>
      <p class="text-gray-600">Input fields, textareas, checkboxes, and form layouts</p>
    <% end %>

    <%= link_to "/component_examples/modals", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Modals</h2>
      <p class="text-gray-600">Dialog boxes and modal overlays</p>
    <% end %>

    <%= link_to "/component_examples/tables", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Tables</h2>
      <p class="text-gray-600">Data tables with sorting and pagination</p>
    <% end %>

    <%= link_to "/component_examples/navigation", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Navigation</h2>
      <p class="text-gray-600">Navbars, sidebars, and breadcrumbs</p>
    <% end %>

    <%= link_to "/component_examples/alerts", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Alerts</h2>
      <p class="text-gray-600">Success, warning, error, and info messages</p>
    <% end %>

    <%= link_to "/component_examples/cards", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Cards</h2>
      <p class="text-gray-600">Content cards and panels</p>
    <% end %>

    <%= link_to "/component_examples/dropdowns", class: "block p-6 bg-white rounded-lg shadow hover:shadow-lg transition-shadow" do %>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Dropdowns</h2>
      <p class="text-gray-600">Dropdown menus and select lists</p>
    <% end %>
  </div>
</div>
