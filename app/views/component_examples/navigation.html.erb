<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Breadcrumb -->
  <%= render Catalyst::BreadcrumbComponent.new do |breadcrumb| %>
    <% breadcrumb.with_item(href: root_path, label: "Home") %>
    <% breadcrumb.with_item(href: "/component_examples", label: "Component Examples") %>
    <% breadcrumb.with_item(label: "Navigation", current: true) %>
  <% end %>

  <div class="mb-8 mt-6">
    <h1 class="text-3xl font-bold text-gray-900">Navigation Components</h1>
    <p class="mt-2 text-lg text-gray-600">Navbars, sidebars, and breadcrumbs</p>
  </div>

  <div class="space-y-12">
    <!-- Breadcrumbs -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Breadcrumbs</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-4">
            <li>
              <div>
                <a href="#" class="text-gray-400 hover:text-gray-500">
                  <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                  </svg>
                  <span class="sr-only">Home</span>
                </a>
              </div>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <a href="#" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Projects</a>
              </div>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="ml-4 text-sm font-medium text-gray-500">Project Neo</span>
              </div>
            </li>
          </ol>
        </nav>
      </div>
    </section>

    <!-- Horizontal Navigation -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Horizontal Navigation</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <nav class="flex space-x-8">
          <a href="#" class="text-blue-600 border-b-2 border-blue-600 pb-2 text-sm font-medium">Dashboard</a>
          <a href="#" class="text-gray-500 hover:text-gray-700 pb-2 text-sm font-medium">Team</a>
          <a href="#" class="text-gray-500 hover:text-gray-700 pb-2 text-sm font-medium">Projects</a>
          <a href="#" class="text-gray-500 hover:text-gray-700 pb-2 text-sm font-medium">Calendar</a>
        </nav>
      </div>
    </section>

    <!-- Vertical Navigation (Sidebar Style) -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Vertical Navigation</h2>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <nav class="flex-1 px-2 py-4 space-y-1">
          <a href="#" class="bg-blue-100 text-blue-700 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
            <svg class="text-blue-500 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
            </svg>
            Dashboard
          </a>
          <a href="#" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
            <svg class="text-gray-400 group-hover:text-gray-500 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a4 4 0 11-8-3 3 3 0 006-4 6 6 0 018 0z" />
            </svg>
            Team
          </a>
          <a href="#" class="text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-sm font-medium rounded-md">
            <svg class="text-gray-400 group-hover:text-gray-500 mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
            </svg>
            Projects
          </a>
        </nav>
      </div>
    </section>

    <!-- Links -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Links</h2>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="space-y-6">
          <!-- Link Variants -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-3">Link Variants</h3>
            <div class="space-y-2">
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :default) do %>
                Default Link
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :primary) do %>
                Primary Link
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :secondary) do %>
                Secondary Link
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :muted) do %>
                Muted Link
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :danger) do %>
                Danger Link
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "#", variant: :plain) do %>
                Plain Link
              <% end %>
            </div>
          </div>

          <!-- External Links -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-3">External Links</h3>
            <div class="space-y-2">
              <%= render Catalyst::LinkComponent.new(href: "https://github.com") do %>
                GitHub (External)
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "https://example.com", variant: :primary) do %>
                Example.com (External Primary)
              <% end %>
              <br>
              <%= render Catalyst::LinkComponent.new(href: "mailto:contact@example.com") do %>
                Email Link (Not External)
              <% end %>
            </div>
          </div>

          <!-- Code Example -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-3">Usage Example</h3>
            <div class="bg-gray-50 p-4 rounded-lg">
              <pre class="text-sm text-gray-800 overflow-x-auto"><code>&lt;%%= render Catalyst::LinkComponent.new(href: "/users", variant: :primary) do %%&gt;
  Manage Users
&lt;%% end %%&gt;

&lt;%%= render Catalyst::LinkComponent.new(href: "https://example.com") do %%&gt;
  External Link (auto-detected)
&lt;%% end %%&gt;</code></pre>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
