  <div class="space-y-12">
    <!-- Basic Table -->
    <section>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Basic Table</h2>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
