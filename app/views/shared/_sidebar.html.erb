<nav class="w-64 min-h-screen bg-white border-r border-gray-200 hidden md:block relative">
  <!-- App Header -->
  <div class="h-16 flex items-center px-6 border-b border-gray-200">
    <h1 class="text-xl font-bold text-gray-900">Jupiter</h1>
  </div>
  
  <!-- Navigation Links -->
  <div class="mt-6 px-4">
    <ul class="space-y-1">
      <li>
        <%= link_to root_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(root_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
          <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          Dashboard
        <% end %>
      </li>
      
      <% if Rails.env.development? && authenticated? && current_user.has_role?(:system_administrator) %>
        <li>
          <%= link_to "/component_examples", class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?("/component_examples") ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
            </svg>
            Components
          <% end %>
        </li>
      <% end %>
      
      <% if authenticated? && policy(User).index? %>
        <li>
          <%= link_to users_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(users_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
            </svg>
            Users
          <% end %>
        </li>
      <% end %>
      
      <% if authenticated? && policy(Role).index? %>
        <li>
          <%= link_to roles_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(roles_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.623 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
            Roles
          <% end %>
        </li>
      <% end %>

      <% if authenticated? && current_user&.can_submit_requests? %>
        <!-- In-Kind Donations Section -->
        <li class="pt-4">
          <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Forms</p>
        </li>
        <li>
          <%= link_to inkind_donations_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(inkind_donations_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 109.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1114.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
            In-Kind Donations
          <% end %>
        </li>
      <% end %>
      
      <% if authenticated? && current_user&.has_role?(:system_administrator) %>
        <!-- System Admin Section -->
        <li class="pt-4">
          <p class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">System</p>
        </li>
        <li>
          <%= link_to system_oauth_status_index_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(system_oauth_status_index_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5V6.75a4.5 4.5 0 119 0v3.75M3.75 21.75h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H3.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
            </svg>
            OAuth Status
          <% end %>
        </li>
        <li>
          <%= link_to system_health_index_path, class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{current_page?(system_health_index_path) ? 'bg-gray-100 text-gray-900' : 'text-gray-700 hover:bg-gray-50'}" do %>
            <svg class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.611L5 14.5" />
            </svg>
            System Health
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- User Section (bottom) -->
  <div class="absolute bottom-0 left-0 w-full border-t border-gray-200 bg-white p-4">
    <% if authenticated? %>
      <div class="flex items-center space-x-3">
        <!-- Avatar -->
        <div class="flex-shrink-0">
          <%= render Catalyst::AvatarComponent.new(
            initials: user_initials,
            size: :md,
            alt: user_display_name,
            class: "bg-indigo-600 text-white"
          ) %>
        </div>
        
        <!-- User Info -->
        <div class="flex-1 min-w-0">
          <%= link_to user_path(Current.user), class: "block hover:bg-gray-50 -mx-2 px-2 py-1 rounded transition-colors" do %>
            <p class="text-sm font-medium text-gray-900 truncate">
              <% if Current.user.first_name.present? %>
                <%= Current.user.first_name %> <%= Current.user.last_name %>
              <% else %>
                <%= Current.user.email_address.split('@').first.titleize %>
              <% end %>
            </p>
            <p class="text-xs text-gray-500 truncate">
              <%= Current.user.email_address %>
            </p>
          <% end %>
          <!-- Authentication Status -->
          <div class="mt-1 flex items-center space-x-1">
            <% if Current.user.nationbuilder_uid.present? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <%= nation_display_name %>
              </span>
            <% end %>
            <!-- Email verification status dot -->
            <% if Current.user.password_digest.present? %>
              <span class="inline-flex items-center" title="<%= Current.user.email_verified? ? 'Email verified' : 'Email not verified' %>">
                <div class="w-2 h-2 rounded-full <%= Current.user.email_verified? ? 'bg-green-500' : 'bg-red-500' %>"></div>
              </span>
            <% end %>
          </div>
        </div>
        
        <!-- Logout -->
        <div class="flex-shrink-0">
          <%= button_to session_path, method: :delete, class: "p-1 text-gray-400 hover:text-gray-500", title: "Sign out", data: { confirm: "Are you sure you want to sign out?" } do %>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
            </svg>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Not authenticated - show login/signup buttons -->
      <div class="space-y-3">
        <button 
          type="button"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          data-controller="auth"
          data-action="click->auth#openLogin"
        >
          Sign in
        </button>
        <button 
          type="button"
          class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          data-controller="auth"
          data-action="click->auth#openRegister"
        >
          Create account
        </button>
      </div>
    <% end %>
  </div>
</nav> 
